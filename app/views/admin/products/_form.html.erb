<%= simple_form_for([:admin, @product]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :price, input_html: { min: 0 } %>
    <%= f.input :quantity, input_html: { min: 0 } %>
    <%= f.input :description %>
    <%= f.input :reviews %>
    <%= f.association :brand %>
    <%= f.association :category %>
    <%= f.input :avatar %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
