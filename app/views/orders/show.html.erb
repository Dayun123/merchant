<ul>
  <li>Order Recipient: <%= @order_details[:name] %></li>
  <li>Address Sent To: <%= @order_details[:address] %></li>
  <li>Order Id: <%= @line_items[0].order_id %></li>
</ul>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Image</th>
      <th>Product</th>
      <th>Quantity</th>
      <th>Unit Price</th>
      <th>Total Price</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @line_items.each do |item| %>
      <tr>
        <td><%= image_tag item.product.avatar.url(:thumb) %></td>
        <td><%= item.product.name %></td>
        <td><%= item.quantity %></td>
        <td><%= number_to_currency(item.price) %></td>
        <td><%= number_to_currency(item.total_price) %></td>
      </tr>
    <% end -%>
  </tbody>

</table>

<h3>Order Subtotal: <%= number_to_currency(@order_subtotal) %></h3>

<%= link_to 'Order History', orders_path %>

