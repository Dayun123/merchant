<h1>Order history for <%= @user_email %></h1>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Recipient</th>
      <th>Address</th>
      <th>Payment Type</th>
      <th></th>
    </tr>
  </thead>
  <% @orders.each do |order| %>
    <tr>
      <td><%= order.id %></td>
      <td><%= order.name %></td>
      <td><%= order.address %></td>
      <td><%= order.pay_type %></td>
      <td><%= link_to 'View Order', order_path(order.id, order_details: { name: order.name, address: order.address} ) %></td>
    </tr>
  <% end -%>
</table>